{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeDigest",
    ":automergeLinters",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":automergeTesters",
    ":automergeTypes",
    ":dependencyDashboard",
    ":label(dependencies)",
    ":pinAllExceptPeerDependencies",
    ":prHourlyLimitNone",
    ":prImmediately",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":semanticPrefixFixDepsChoreOthers",
    ":separateMultipleMajorReleases",
    ":separateMultipleMinorReleases",
    ":separatePatchReleases",
    ":timezone(Australia/Sydney)",
    ":updateNotScheduled",
    "group:allDigest",
    "group:definitelyTyped",
    "group:githubArtifactActions",
    "group:jsTestNonMajor",
    "group:jsUnitTestNonMajor",
    "group:linters",
    "group:monorepos",
    "group:postcss",
    "group:react",
    "group:rubyOnRails",
    "group:testNonMajor",
    "group:unitTestNonMajor",
    "group:vite",
    "helpers:pinGitHubActionDigests",
    "npm:unpublishSafe",
    "replacements:all",
    "workarounds:all"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "extends": ["schedule:daily"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": true,
    "commitMessagePrefix": "fix(security): Security update",
    "addLabels": ["security"]
  },
  "prConcurrentLimit": 1,
  "platform": "github",
  "automergeStrategy": "squash",
  "schedule": ["* * * * *"],
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchPackageNames": ["@astrojs/check", "@astrojs/ts-plugin"],
      "automerge": true,
      "matchUpdateTypes": ["patch", "minor"]
    }
  ]
}
