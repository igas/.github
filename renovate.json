{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["igas/.github"],
  "packageRules": [
    {
      "description": "Automerge renovate updates",
      "matchPackageNames": ["renovate"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "extends": ["schedule:weekly"]
    }
  ]
}
